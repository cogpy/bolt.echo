{
  "name": "bolt.echo",
  "version": "0.1.0",
  "description": "Deep Tree Echo AI Agent",
  "author": "Bolt Echo Team",
  "main": "build/electron/main/index.mjs",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@9.4.0",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "deploy": "pnpm run build:pages && wrangler pages deploy build/client --project-name boltecho",
    "build": "remix vite:build --force",
    "build:pages": "./build-pages.sh",
    "dev": "remix vite:dev",
    "dev:shell": "pnpm -C electron dev",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:deployment": "./scripts/test-deployment.sh",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "pnpm run lint -- --fix",
    "start": "pnpm run bindings && npx wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "preview": "pnpm run build && pnpm run start",
    "electron:build:renderer": "pnpm build",
    "electron:build:main": "node --max-old-space-size=8192 ./node_modules/vite/bin/vite.js build --config ./electron/main/vite.config.ts",
    "electron:build:preload": "node --max-old-space-size=8192 ./node_modules/vite/bin/vite.js build --config ./electron/preload/vite.config.ts",
    "electron:build:deps": "pnpm electron:build:main && pnpm electron:build:preload",
    "electron:build:win": "rimraf dist && pnpm electron:build:renderer && pnpm electron:build:deps && node --max-old-space-size=8192 ./node_modules/electron-builder/out/cli/cli.js --win",
    "bindings": "./bindings.sh",
    "migrate-sass": "npx sass-migrator import .",
    "cleanup:npm": "rm -rf node_modules package-lock.json && pnpm install",
    "setup:pnpm": "node setup-pnpm.js"
  },
  "engines": {
    "node": ">=20.15.1"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.39",
    "@codemirror/autocomplete": "6.17.0",
    "@codemirror/commands": "6.6.0",
    "@codemirror/lang-cpp": "6.0.2",
    "@codemirror/lang-css": "6.2.1",
    "@codemirror/lang-html": "6.4.9",
    "@codemirror/lang-javascript": "6.2.2",
    "@codemirror/lang-json": "6.0.1",
    "@codemirror/lang-markdown": "6.2.5",
    "@codemirror/lang-python": "6.1.6",
    "@codemirror/lang-sass": "6.0.2",
    "@codemirror/lang-wast": "6.0.2",
    "@codemirror/language": "6.10.2",
    "@codemirror/search": "6.5.6",
    "@codemirror/state": "6.4.1",
    "@codemirror/view": "6.28.4",
    "@iconify-json/ph": "1.1.13",
    "@iconify-json/svg-spinners": "1.1.2",
    "@lezer/highlight": "1.2.0",
    "@nanostores/react": "0.7.2",
    "@radix-ui/react-dialog": "1.1.1",
    "@radix-ui/react-dropdown-menu": "2.1.1",
    "@remix-run/cloudflare": "2.10.2",
    "@remix-run/cloudflare-pages": "2.10.2",
    "@remix-run/node": "2.10.2",
    "@remix-run/react": "2.10.2",
    "@uiw/codemirror-theme-vscode": "4.23.0",
    "@unocss/reset": "0.61.0",
    "@webcontainer/api": "1.3.0-internal.10",
    "@xterm/addon-fit": "0.10.0",
    "@xterm/addon-web-links": "0.11.0",
    "@xterm/xterm": "5.5.0",
    "ai": "3.3.4",
    "cloudflare": "3.5.0",
    "date-fns": "3.6.0",
    "diff": "5.2.0",
    "dompurify": "3.2.4",
    "electron-log": "^5.4.2",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "eslint": "^9.35.0",
    "framer-motion": "11.2.12",
    "isbot": "4.1.0",
    "istextorbinary": "9.5.0",
    "jose": "5.6.3",
    "mime": "^4.0.7",
    "nanostores": "0.10.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hotkeys-hook": "4.5.0",
    "react-markdown": "9.0.1",
    "react-resizable-panels": "2.0.20",
    "react-toastify": "10.0.5",
    "rehype-raw": "7.0.0",
    "rehype-sanitize": "6.0.0",
    "remark-gfm": "4.0.0",
    "remix-island": "0.2.0",
    "remix-utils": "7.6.0",
    "shiki": "1.9.1",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@blitz/eslint-plugin": "0.1.0",
    "@cloudflare/workers-types": "^4.20250809.0",
    "@remix-run/dev": "2.10.0",
    "@types/diff": "5.2.1",
    "@types/mime": "^4.0.0",
    "@types/node": "22.10.4",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.3.4",
    "cross-env": "7.0.3",
    "electron": "^38.0.0",
    "electron-builder": "25.1.8",
    "fast-glob": "3.3.2",
    "is-ci": "3.0.1",
    "node-fetch": "3.3.2",
    "prettier": "3.3.2",
    "rimraf": "4.4.1",
    "sass": "1.83.1",
    "typescript": "5.5.2",
    "unified": "11.0.5",
    "unocss": "0.61.3",
    "vite": "6.4.1",
    "vite-plugin-node-polyfills": "0.22.0",
    "vite-plugin-optimize-css-modules": "1.1.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.1.9",
    "wrangler": "^4.27.0",
    "zod": "3.23.8"
  },
  "resolutions": {
    "@typescript-eslint/utils": "8.0.0-alpha.30"
  },
  "build": {
    "appId": "com.boltecho.app",
    "productName": "Bolt Echo",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "electron/*.html",
      "electron/*.js",
      "electron/package.json",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.png"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
